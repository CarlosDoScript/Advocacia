@model PagedList.IPagedList<Advocacia.Models.Mapping.Categorias>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section banner-page" data-background="images/banner-single.jpg">
    <div class="content-wrap pos-relative">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex bd-highlight mb-3">
                        <div class="title-page">Categorias</div>
                    </div>
                    <div class="d-flex bd-highlight mb-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb ">
                                <li class="breadcrumb-item active" aria-current="page">Categorias</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="content-wrap">
        <div class="container">
            <div class="row">

                @if (Model.Count > 0)
                {
                    foreach (var categoria in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 mb-4">
                            <a href="@Url.Action("Finalidades", "Blog", new { idCategoria = categoria.id,nomeCategoria = categoria.descricao })">
                                <div class="box-icon-1 text-center descricao-categoria">
                                    <div class="body-content">
                                        <h3>@categoria.descricao</h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }

            </div>
        </div>
        <hr class="mt-5" />
        <nav aria-label="Page navigation mt-5">
            <ul class="pagination justify-content-end" style="height: 20px;">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Blog", "Blog", new { page = Model.PageNumber - 1 })" tabindex="-1">Anterior</a>
                </li>

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Blog", "Blog", new { page = i })">@i</a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Blog", "Blog", new { page = Model.PageNumber + 1 })">Próximo</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    .descricao-categoria {
        white-space: normal !important;
        display: inline-block !important;
    }
</style>

