<body class="container">
    <div class="d-flex" style="margin-left:450px">
        <div class="justify-content-center">
            <h1>Login</h1>
            @using (Html.BeginForm("AreaRestrita","Home", FormMethod.Post, new { id = "formLogin", name = "formLogin"}))
            {
                @Html.AntiForgeryToken()

                @Html.LabelFor(x => x.Usuario)
                @Html.TextBoxFor(x => x.Usuario, new {@class="form-control",placeholder="Usuario",required="Insira o usuário"})
                <hr />
                @Html.LabelFor(x => x.Senha)
                @Html.TextBoxFor(x => x.Senha, new {@class="form-control", placeholder="Senha", required = "Insira a senha" })
                <div class="ml-3 mt-3">
                    <button type="submit" class="btn btn-dark">Entrar</button>
                </div>
            }
        </div>
    </div>
    <!-- JS VENDOR -->
    <script src="~/Scripts/vendor/jquery.min.js"></script>
