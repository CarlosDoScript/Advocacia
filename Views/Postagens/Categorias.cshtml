@model PagedList.IPagedList<Advocacia.Models.Mapping.Categorias>
@{
    ViewBag.Title = "Postagens";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-black">Categorias</h2>
<hr />
<div class="d-flex flex-wrap mt-1">

    @if (Model.Count > 0)
    {
        foreach (var categoria in Model)
        {
            <a class="mr-4 text-black" href="@Url.Action("Finalidades", "Postagens", new { idCategoria = categoria.id,nomeCategoria = categoria.descricao })">@categoria.descricao</a>
        }
    }
</div>
<hr class="mt-5" />
<nav aria-label="Page navigation mt-5">
    <ul class="pagination justify-content-end" style="height: 20px;">
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Categorias", "Postagens", new { page = Model.PageNumber - 1 })" tabindex="-1">Anterior</a>
        </li>

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Categorias", "Postagens", new { page = i })">@i</a>
            </li>
        }

        <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Categorias", "Postagens", new { page = Model.PageNumber + 1 })">Próximo</a>
        </li>
    </ul>
</nav>
