
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-black">Clientes</h2>
<div class="d-flex justify-content-between align-items-end">
    <div class="ml-auto">
        <label class="text-black" for="pesquisar">Pesquisar</label>
        <input style="width: 300px;" class="form-control" type="text" id="pesquisar" name="pesquisar" />
    </div>
</div>

<div id="tableClientes" class="mt-3"></div>
<!-- Modal -->
<div class="modal fade" id="modalCliente" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Informações do Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row">
                        <div class="col col-md-12">
                            <label for="Nome">Nome </label>
                            <div class="form-group">
                                <p class="text-black" style="word-wrap: break-word;" id="Nome"></p>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="NomeLogin">Email </label>
                            <div class="form-group">
                                <p class="text-black" style="word-wrap: break-word;" id="Email"></p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="NomeLogin">Celular </label>
                            <div class="form-group">
                                <p class="text-black" style="word-wrap: break-word;" id="Celular"></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="NomeLogin">Título </label>
                            <div class="form-group">
                                <p class="text-black" style="word-wrap: break-word;" id="Titulo"></p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="NomeLogin">Mensagem </label>
                            <div class="form-group">
                                <p class="text-black" style="word-wrap: break-word;" id="Mensagem"></p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var usuarioAdm = "@ViewBag.UsuarioAdm"
</script>
<script src="~/Scripts/Clientes/Clientes.js"></script>