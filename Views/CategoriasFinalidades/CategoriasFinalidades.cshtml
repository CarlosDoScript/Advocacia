
@{
    ViewBag.Title = "Autores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-black">Categorias e Finalidades</h2>
<div class="d-flex justify-content-between align-items-end">
    @if (ViewBag.UsuarioAdm == true)
    {
        <div>
            <button type="button" data-toggle="modal" data-target="#modalCategoria" class="btn btn-success btnNovo">Novo <i class="fas fa-plus"></i></button>
        </div>
    }
    <div class="ml-auto">
        <label class="text-black" for="pesquisar">Pesquisar</label>
        <input style="width: 300px;" class="form-control" type="text" id="pesquisar" name="pesquisar" />
    </div>
</div>


<div id="tableCategorias" class="mt-3"></div>

<!-- Modal categoria -->
<div class="modal fade" id="modalCategoria" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row">
                        <div class="col col-md-12">
                            <label for="descricao">Descricao: <span class="text-danger">*</span></label>
                            <div class="form-group">
                                <input type="text" class="form-control" id="descricao" placeholder="Descrição" maxlength="255">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSalvar" type="button" class="btn btn-secondary">Salvar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal finalidades -->
<div class="modal fade" id="modalFinalidade" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Finalidades</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-between align-items-end">
                    @if (ViewBag.UsuarioAdm == true)
                    {
                        <div>
                            <button type="button" data-toggle="modal"  data-target="#modalCriaFinalidade" class="btn btn-success btnNovoFinalidade">Novo <i class="fas fa-plus"></i></button>
                        </div>
                    }
                    <div class="ml-auto">
                        <label class="text-black" for="pesquisar">Pesquisar</label>
                        <input style="width: 300px;" class="form-control" type="text" id="pesquisarFinalidade" name="pesquisar" />
                    </div>
                </div>

                <div id="tableFinalidades" class="mt-3"></div>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCriaFinalidade" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel2" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModalFinalidade">Adicionar Finalidade</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row">
                        <div class="col col-md-12">
                            <label for="descricao">Descricao: <span class="text-danger">*</span></label>
                            <div class="form-group">
                                <input type="text" class="form-control" id="descricaoFinalidade" placeholder="Descrição" maxlength="255">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSalvarFinalidade" type="button" class="btn btn-secondary">Salvar</button>
            </div>
        </div>
    </div>
</div>

<script>
    var usuarioAdm = "@ViewBag.UsuarioAdm"
</script>
<script src="~/Scripts/CategoriasFinalidades/CategoriasFinalidades.js"></script>